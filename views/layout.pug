doctype html
html
    head
        title Wikiify
        link(rel='stylesheet' href='/bower_components/bootstrap/dist/css/bootstrap.css')
        link(rel='stylesheet', type='text/css', href='https://cdn.jsdelivr.net/npm/diff2html/bundles/css/diff2html.min.css')
    body
        // Navbar
        nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
            a.navbar-brand(href='/') Wikiify
            button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
                span.navbar-toggler-icon
            #navbarSupportedContent.collapse.navbar-collapse
                ul.navbar-nav.mr-auto
                form.form-inline.my-2.my-lg-0(action='/page/search', method='GET')
                    input.form-control.mr-sm-2(type='search', name='search' placeholder='Search', aria-label='Search')
                    button.btn.btn-outline-light.my-2.my-sm-0(type='submit') Search


        .container.mt-5
            block content
        
        script(src="/bower_components/showdown/dist/showdown.min.js")
        script(type='text/javascript', src='https://cdn.jsdelivr.net/npm/diff2html/bundles/js/diff2html.min.js')
        block script